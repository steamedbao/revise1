Temperature:

#include <stdio.h>
int main()
{
    float fahrenheit, celsius;

    printf("Enter the temperature in degree F: \n");
    scanf("%f", &fahrenheit);

    celsius = (fahrenheit - 32)*5/9;


    printf("Converted degree in C: %.2f\n", celsius);
    return 0;

}

